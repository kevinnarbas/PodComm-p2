<%- include('../partials/header') %>

<% if (peas.podcasts.length === 1) { %>
  <h3><%= peas.podcasts.length %> Pea In Your Pod!</h3>
<% } else { %>
  <h3><%= peas.podcasts.length %> Peas In Your Pod!</h3>
<% } %>
<a href="/podcasts/new" class="button button-primary">Add a podcast</a>
<a href="/podcasts/search" class="button button-primary">Search podcasts</a>

<div class="row">
<% peas.podcasts.forEach(function(p) { %>
  <div class="three columns user-index">  
    <ul>
      <li><h4><%= p.title %></h4></li>
      <li><a href="podcasts/<%= p.id %>" class="button pea-details">Pea Deets</a></li>
    </ul>
  </div>
  <% }); %>
</div>


<%- include('../partials/footer') %>