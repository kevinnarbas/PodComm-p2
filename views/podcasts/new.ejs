<%- include('../partials/header') %>

<a href="/podcasts" class="button button-primary"><img class="butt-img" src="/images/back-arrrow.png" alt=""> Go Back</a>

<form action="/podcasts" method="POST" class="row">
  <div class="one-half column">
    <label>Title</label>
    <input type="text" name="title" placeholder="The PodComm Podcast" required>
    <label>Length:</label>
    <input type="text" pattern="\d:[0-5]\d" placeholder="1:30" name="length">
    <label>Seasons:</label>
    <input type="number" min="1" placeholder="1" name="seasons">
    <label>Type</label>
    <select name="type">
      <option value="Informational">Informational</option>
      <option value="Random">Random</option>
      <option value="Storytelling">Storytelling</option>
    </select>
  </div>
  <div class="one-half column">
    <label>Genre</label>
    <select name="genre">
      <option value="Arts">Arts</option>
      <option value="Business">Business</option>
      <option value="Comedy">Comedy</option>
      <option value="Education">Education</option>
      <option value="Fiction">Fiction</option>
      <option value="Government">Government</option>
      <option value="Health/Fitness">Health/Fitness</option>
      <option value="History">History</option>
      <option value="Horror">Horror</option>
      <option value="Kids/Family">Kids/Family</option>
      <option value="Music">Music</option>
      <option value="News">News</option>
      <option value="Science">Science</option>
      <option value="Sports">Sports</option>
      <option value="Technology">Technology</option>
      <option value="True Crime">True Crime</option>
      <option value="Tv/Film">Tv/Film</option>
      <option value="Religion/Spirituality">Religion/Spirituality</option>
      <option value="Society/Culture">Society/Culture</option>
    </select>
    <label>Host Count</label>
    <input type="Number" name="hostCount" placeholder="1" min="1">
    <label>Guests?</label>
    <select name="guest">
      <option value="Every Episode">Every Episode</option>
      <option value="Never">Never</option>
      <option value="Sometimes">Sometimes</option>
    </select>
    <br>
    <button type="submit" class="button button-primary" >Submit <img class="butt-img" src="/images/submit-icon.png" alt="submit-icon">
    </button>
  </div>
</form>

<%- include('../partials/footer') %>